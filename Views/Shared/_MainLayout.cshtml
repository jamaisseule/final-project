        <div class = "footer">
            <div class="container">
                <div class ="row1">
                    <div class ="footer-col">
                    <h4>LumosTutor</h4>
                    <ul class ="ul">
                        <li><a asp-controller = "Home" asp-action ="About">About Us</a></li>
                        <li><a asp-controller = "Home" asp-action ="Contactus">Contact Us</a></li>
                        <li><a asp-controller = "Home" asp-action ="Support">Support</a></li>
